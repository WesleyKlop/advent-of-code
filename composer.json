{
    "name": "wesleyklop/advent-of-code",
    "description": "Advent of code solutions in PHP",
    "keywords": [
        "framework",
        "laravel",
        "laravel zero",
        "console",
        "cli"
    ],
    "homepage": "https://wesley.io",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Wesley Klop",
            "email": "wesley19097@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.2.0",
        "illuminate/http": "^8.0",
        "laravel-zero/framework": "^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.4.2",
        "pestphp/pest": "^1.0",
        "rector/rector": "^0.11.36",
        "symplify/easy-coding-standard": "^9.0",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [
        "advent-of-code"
    ],
    "scripts": {
        "ecs:check": "@php vendor/bin/ecs check app bootstrap config tests",
        "ecs:fix": "@ecs:check --fix",
        "rector:check": "@rector:fix --dry-run",
        "rector:fix": "@php vendor/bin/rector process",
        "lint:check": [
            "@rector:check",
            "@ecs:check"
        ],
        "lint:fix": [
            "@rector:fix",
            "@ecs:fix"
        ],
        "psalm:check": "@php vendor/bin/psalm",
        "psalm:fix": "@psalm:check --issues=all --alter",
        "test": "@php vendor/bin/pest"
    }
}
