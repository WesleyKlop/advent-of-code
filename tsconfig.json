{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "declaration": true,
        "strict": true,
        "target": "ES2020",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*"]
}
